    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bcg" />
    <LinearLayout
        android:layout_centerVertical="true"
        android:id="@+id/layout_reg"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="20dp">
        <RelativeLayout
            android:id="@+id/layout_head_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="#000">

            <ImageView
                android:id="@+id/iv_reg_head"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/head"
                android:clickable="true"/>
            <ImageView
                android:id="@+id/iv_reg_to"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/to"
                android:layout_toRightOf="@id/iv_reg_head"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_toRightOf="@id/iv_reg_to"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp">
                <EditText
                    android:id="@+id/et_reg_nickname"
                    android:textSize="15dp"
                    android:singleLine="true"
                    android:layout_marginLeft="15dp"
                    android:hint="@string/nickname"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/layout_user_psw"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_user_psw1"
                android:background="#000"
                android:layout_marginBottom="3dp"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/regusername"
                    android:layout_gravity="center_vertical"
                    />
                <EditText
                    android:textSize="15dp"
                    android:singleLine="true"
                    android:id="@+id/et_reg_username"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:hint="@string/username"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_user_psw2"
                android:background="#000"
                android:layout_marginBottom="3dp"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/password"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:textSize="15dp"
                    android:id="@+id/et_reg_password"
                    android:singleLine="true"
                    android:layout_marginLeft="15dp"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_user_psw3"
                android:background="#000">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/again"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:textSize="15dp"
                    android:singleLine="true"
                    android:id="@+id/et_reg_password2"
                    android:layout_marginLeft="15dp"
                    android:inputType="textPassword"
                    android:hint="@string/again"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>



